@model IEnumerable<Assignment5.Models.MediaTypeBaseViewModel>

@{
    ViewBag.Title = "Index";
}

<style>

    .table {
        font-family: Georgia, 'Times New Roman', Times, serif;
        opacity: 0.8;
        filter: alpha(opacity=60);
        background-color: #ffffff;
        color: black;
        border-collapse: collapse;
    }
</style>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MediaTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MediaTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MediaTypeId })
        </td>
    </tr>
}

</table>
