@model IEnumerable<Assignment4.Models.InvoiceBaseViewModel>

@{
    ViewBag.Title = "Index";
}
<style>
.table {
        font-family: Georgia, 'Times New Roman', Times, serif;
        opacity: 0.8;
        filter: alpha(opacity=60);
        background-color: #ffffff;
        color: black;
        border-collapse: collapse;
        display: block;
        height: 500px;
        overflow-y: scroll;
    }
</style>

<h2 style="font-family:Georgia, 'Times New Roman', Times, serif;color:white;">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillingPostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingPostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InvoiceId }) |
                @Html.ActionLink("Details", "Details", new { id = item.InvoiceId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InvoiceId })
            </td>
        </tr>
    }

</table>
